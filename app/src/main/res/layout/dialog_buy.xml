<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="17dp"
        android:layout_gravity="center"
        android:id="@+id/unit_img_buy"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="유닛이름"
            android:textSize="20dp"
            android:id="@+id/unit_n"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가격"
            android:textSize="20dp"
            android:id="@+id/unit_p"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="총액"
            android:textSize="20dp"
            android:id="@+id/unit_p_a"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="가지고 있는 돈이 부족합니다"
            android:textSize="20dp"
            android:textColor="#F00"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:id="@+id/money_enough"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="#B19ED0"
            android:id="@+id/et_cnt"
            android:text="0"
            android:gravity="center"
            android:textSize="30dp"

            android:layout_weight="1"/>

        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="+"
            android:id="@+id/btn_plus"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/gray_btn_10"
            android:textSize="30dp"/>

        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="-"
            android:id="@+id/btn_minus"
            android:background="@drawable/gray_btn_10"
            android:textSize="30dp"/>


    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/btn_buyItem"
        android:background="@drawable/green_btn"
        android:text="BUY"
        android:textSize="24dp"/>

    <Button
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:id="@+id/btn_end"
        android:background="@drawable/red_btn"
        android:text="CANCEL"
        android:textSize="24dp"/>


</LinearLayout>